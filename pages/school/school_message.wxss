/* pages/school/school_message.wxss */
.container{
  background-color: whitesmoke;
  padding-top:0; 
}.school_picture{
  width: 100%;
  height: 280rpx;
  display: block;
}
.school_info{
  padding: 40rpx;
  background-color: #fff;
  width: 80%;
  margin-top: -20rpx;
  border-radius: 10rpx;
}
#school_name{
  font-size:22px;
  font-family: "Microsoft YaHei";
  color: #696969; 
}
.school_type{
  width: 80rpx;
  height: 30rpx;
  text-align: center;
  border: 1rpx solid lightgrey;
  color: gray;
}
.icon{
  position: relative;
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin-left: 10rpx;
}
#school_introduce{
  font-size: 12px;
  color: gray;
}
.subtitle{
  font-size: 20px;
  color: black;
  font-family: "Microsoft YaHei";
}
.msg_name{
  font-size: 12px;
  color: black;
  font-family: "Microsoft YaHei";
}
.msg{
  font-size: 12px;
  color: gray;
}
.school_comment{
  padding: 40rpx;
  background-color: #fff;
  margin-top: 30rpx;
  width: 80%;
  border-radius: 10rpx;
}
.school_msg{
  padding: 40rpx;
  background-color: #fff;
  margin-top: 30rpx;
  width: 80%;
  border-radius: 10rpx;
}
.school_rank{
  padding-bottom:50rpx;
  border-bottom: 1rpx solid lightgrey;
}
.school_normalInfo{
  margin-top:50rpx;
  padding-bottom: 50rpx;
  border-bottom: 1rpx solid lightgrey;
}
.school_application{
  margin-top:50rpx;
  padding-bottom: 50rpx;
  border-bottom: 1rpx solid lightgrey;
}
.school_employment{
   margin-top:50rpx;
  padding-bottom: 50rpx;
  border-bottom: 1rpx solid lightgrey;
}
.comment_publish{
  display: flex;
  position: fixed;
  height: 80rpx;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  padding-top:10rpx; 
}
.publish{
  position: fixed;
  left: 10%;
  width: 60%;
  border-radius: 1em;
  bottom: 15rpx;
  background-color: #62e1e6;
  height: 50rpx;
  color: #fff;
  font-size: 12px;
  text-align: center;
  line-height: 50rpx;
}